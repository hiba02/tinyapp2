<header>
  <nav class="navbar navbar-expand-lg" style=" background-color: #aad7f7;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (username) {%>
    <h5 style="color:rgb(67, 67, 212)">
      Logged in as:
      <span style="color:rgb(2, 0, 7)">&nbsp;<%= username %></span>
    </h5>
    &nbsp;&nbsp;
    <form
      class="form-inline"
      action="/logout"
      method="POST"
      style="padding: 15px 5px"
    >
      <input
        type="submit"
        class="btn btn-outline-info"
        name="<%= username %>"
        value="logout"
      />
    </form>
    <% } else { %>

    <div class="user-name">
      <form class="form-inline" action="/login" method="POST">
        <div class="form-group">
          <label for="longURL">USER NAME:</label>
          <input
            class="form-control"
            type="text"
            name="username"
            placeholder="USER NAME"
            style="width: 300px; margin: 1em"
          />
          <button type="submit" class="btn btn-primary">Login</button>
        </div>
      </form>
    </div>
    <% } %>
    <!-- <p><%= username%></p> -->
  </nav>
</header>
